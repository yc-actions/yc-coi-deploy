{
  "name": "yc-actions-yc-coi-deploy",
  "version": "2.0.0",
  "description": "GitHub Action to deploy container to Virtual Machine in Yandex Cloud created from Container Optimized Image.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "build:swc": "swc ./src -d lib",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts --fix",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build:swc && npm run format && npm run lint && npm run package && npm test",
    "git-tag": "git tag v`cat package.json | jq -r '.version' | awk -F. '{print $1}'` -f &&  git tag v`cat package.json | jq -r '.version'` -f"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yc-actions/yc-coi-deploy.git"
  },
  "keywords": [
    "actions",
    "yandex cloud",
    "containers",
    "COI",
    "deploy"
  ],
  "author": "Nikolay Matrosov",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "@yandex-cloud/nodejs-sdk": "^2.4.4",
    "@grpc/grpc-js": "^1.8.18",
    "mustache": "^4.2.0"
  },
  "devDependencies": {
    "@types/mustache": "^4.2.2",
    "@types/node": "^20.4.4",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^5.61.0",
    "@vercel/ncc": "^0.36.1",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.71",
    "@swc/jest": "^0.2.27",
    "dotenv": "^16.3.1",
    "eslint": "^8.45.0",
    "eslint-plugin-github": "^4.9.0",
    "eslint-plugin-jest": "^27.2.2",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "jest": "^29.6.1",
    "js-yaml": "^4.1.0",
    "prettier": "2.8.8",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  }
}
